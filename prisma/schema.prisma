// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Modelo de Grupo de Usuario
model UserGroup {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  description String?
  order       Int      @default(0)
  color       String?  // Color para el nombre del grupo
  isDefault   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  users       User[]
}

// Modelo de Usuario
model User {
  id          Int       @id @default(autoincrement())
  email       String    @unique
  username    String    @unique
  password    String
  avatar      String?
  lastLoginAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  userGroupId Int       @default(2) // Por defecto: Registrados
  userGroup   UserGroup @relation(fields: [userGroupId], references: [id])
  
  posts     Post[]
  comments  Comment[]
  likes     Like[]
  givenReputations     Reputation[] @relation("GivenReputations")
  receivedReputations  Reputation[] @relation("ReceivedReputations")
  moderationActions    ModerationAction[] @relation("ModeratedUser")
  performedModerations ModerationAction[] @relation("ModeratorActions")
  
  @@index([userGroupId])
}

// Modelo de Categoría
model Category {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  slug        String   @unique
  description String?
  createdAt   DateTime @default(now())
  
  posts       Post[]
}

// Modelo de Post/Tema del Foro
model Post {
  id         Int       @id @default(autoincrement())
  title      String
  slug       String    @unique
  content    String    @db.Text
  views      Int       @default(0)
  isPinned   Boolean   @default(false)
  isLocked   Boolean   @default(false)
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  
  authorId   Int
  author     User      @relation(fields: [authorId], references: [id], onDelete: Cascade)
  
  categoryId Int
  category   Category  @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  
  comments   Comment[]
  likes      Like[]

  @@index([categoryId])
  @@index([authorId])
  @@index([createdAt])
  @@index([isPinned, createdAt])
}

// Modelo de Comentario
model Comment {
  id        Int      @id @default(autoincrement())
  content   String   @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  authorId  Int
  author    User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  
  postId    Int
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@index([postId])
  @@index([authorId])
  @@index([createdAt])
}

// Modelo de Like
model Like {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  
  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  postId    Int
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  
  @@unique([userId, postId])
}

// Modelo de Reputación
model Reputation {
  id        Int      @id @default(autoincrement())
  type      String   // 'positive', 'neutral', 'negative'
  comment   String?  @db.Text
  createdAt DateTime @default(now())
  
  fromUserId Int
  fromUser   User    @relation("GivenReputations", fields: [fromUserId], references: [id], onDelete: Cascade)
  
  toUserId   Int
  toUser     User    @relation("ReceivedReputations", fields: [toUserId], references: [id], onDelete: Cascade)
  
  @@index([toUserId])
  @@index([fromUserId])
  @@index([createdAt])
}

// Modelo de Configuración del Foro
model Setting {
  id        Int      @id @default(autoincrement())
  key       String   @unique
  value     String   @db.Text
  type      String   // 'string', 'number', 'boolean', 'json'
  updatedAt DateTime @updatedAt
  
  @@index([key])
}

// Modelo de Moderación (baneos, suspensiones, advertencias)
model ModerationAction {
  id          Int      @id @default(autoincrement())
  type        String   // 'ban', 'suspend', 'warn'
  reason      String?  @db.Text
  expiresAt   DateTime? // Para suspensiones temporales
  createdAt   DateTime @default(now())
  
  userId      Int
  user        User     @relation("ModeratedUser", fields: [userId], references: [id], onDelete: Cascade)
  
  moderatorId Int
  moderator   User     @relation("ModeratorActions", fields: [moderatorId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([moderatorId])
  @@index([type])
  @@index([expiresAt])
}
